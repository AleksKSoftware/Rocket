<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ExploreSearchInput">
        <item name="android:background">@drawable/bg_search_input</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_alpha_50</item>
        <item name="android:hint">@string/search_input_hint</item>
        <item name="android:textSize">15sp</item>
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor_drawable</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textShortMessage</item>
    </style>

    <string name="search_input_hint">Search</string>
</resources>